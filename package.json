{
  "name": "openvox",
  "version": "0.0.4",
  "type": "module",
  "description": "OpenVox frontend JavaScript",
  "scripts": {
    "lint": "eslint static/js/",
    "lint:fix": "eslint static/js/ --fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "openapi:generate": ".venv/bin/python scripts/generate_openapi.py",
    "openapi:validate": ".venv/bin/python scripts/validate_openapi.py",
    "client:generate": "pnpm openapi:generate && orval && pnpm api:bundle",
    "api:bundle": "esbuild static/js/studio/api.ts --bundle --format=esm --outfile=static/js/studio/api.bundle.js --sourcemap",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@openapitools/openapi-generator-cli": "^2.29.0",
    "@playwright/test": "^1.58.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "orval": "^8.4.0",
    "typescript": "^5.9.3",
    "yaml": "^2.0.0"
  },
  "dependencies": {
    "axios": "^1.13.5"
  }
}
